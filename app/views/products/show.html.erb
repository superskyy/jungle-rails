<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>
      </div>
      <div>
        <%= form_for :review, url: product_review_index_path(@product) do |f| %>
          <h2>New Review</h2>
            Description : <%= f.text_field :description %><br />
            Rating : <%= f.select :rating, [1, 2, 3, 4, 5]%><br />
            <%= f.submit %>
        <% end %>
      </div>
      <div>
        <% @sorted.each do |r| %>
          <dd>Product ID: <%= r.product_id %></dd>
          <dd>User ID: <%= r.user_id %></dd>
          <dd>Product Review: <%= r.description %></dd>
          <dd>Product Rating: <%= r.rating %></dd>
        <% end %>
      </div>
    </div>

  </article>

</section>
