<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>
      </div>
      <div>
        <% if current_user %>
          <%= form_for :review, url: product_review_index_path(@product) do |f| %>
            <h2>New Review</h2>
              Description : <%= f.text_field :description %><br />
              Rating : <%= f.select :rating, [1, 2, 3, 4, 5]%><br />
              <%= f.submit %>
          <% end %>
        <% else %>
          <p>You must <%= link_to "login", '/login' %> to leave a review.</p>
        <% end %>
      </div>
        <br>
        <br>
        <br>
        <br>
      <div>
        <% @sorted.each do |r| %>
            <div style="border: 1px solid grey">
              <dd><strong>Product ID: </strong><i><%= r.product_id %></i></dd>
              <dd><strong>User ID: </strong><i><%= r.user_id %></i></dd>
              <dd><strong>Product Review: </strong><i>"<%= r.description %>"</i></dd>
              <dd><strong>Product Rating: </strong><i><%= r.rating %></i></dd>
            
              <% if current_user.id == r.user_id %>
                <%= link_to 'Delete', product_review_path(r.product_id, r.id), method: :delete, data: { confirm: 'Please Confirm?' }, class: "btn btn-danger btn-xs" %>
              <% end %>
        
            </div>
            <br>
        <% end %>
      </div>
    </div>

  </article>

</section>
